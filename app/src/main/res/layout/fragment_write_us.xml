<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layout_write_us_toolbar"
        layout="@layout/layout_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_write_us_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/write_us_title"
        android:textAlignment="center"
        android:textColor="#1c1e20"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/guideline_write_us_end"
        app:layout_constraintStart_toStartOf="@id/guideline_write_us_start"
        app:layout_constraintTop_toBottomOf="@id/layout_write_us_toolbar" />


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_write_us"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#fafafa"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_write_us_vertical_center"
        app:layout_constraintEnd_toStartOf="@id/guideline_write_us_end"
        app:layout_constraintStart_toStartOf="@id/guideline_write_us_start"
        app:layout_constraintTop_toBottomOf="@id/text_view_write_us_title">

        <EditText
            android:id="@+id/edit_text_write_us_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/write_us_message_hint"
            android:textColor="#1c1e20"
            android:textSize="16sp" />

    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/button_write_us_send"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="@string/write_us_send"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/guideline_write_us_end"
        app:layout_constraintStart_toStartOf="@id/guideline_write_us_start"
        app:layout_constraintTop_toBottomOf="@id/guideline_write_us_vertical_center" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_write_us_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_write_us_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_write_us_vertical_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

</android.support.constraint.ConstraintLayout>