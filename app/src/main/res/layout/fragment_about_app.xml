<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/text_view_about_app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="О приложении"
                android:textSize="28sp"
                android:textColor="#000000"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/text_view_about_app_owners"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Приложения разработано компанией ITS. Для сотрудничества, отзывов, предложений свяжитесь с нами в разделе Настройки > Напиши нам. Приложение разработано для формирования финансовой грамотности пользователя "
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_about_app_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

        <TextView
                android:id="@+id/text_view_about_app_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019"
                app:layout_constraintTop_toBottomOf="@+id/text_view_about_app_owners"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>